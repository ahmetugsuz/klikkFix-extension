{
  "manifest_version": 3,
  "name": "KlikkFix",
  "version": "1.0",
  "key": "",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "system.display",
    "identity",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://klikkfix-backend.onrender.com/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "oauth2": {
    "client_id": "743752691512-devhp8au5vetvoa136bqmoot0emc84go.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "background": {
    "service_worker": "klikkFix.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*", "popup.html"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "KlikkFix AI Assistant"
  }
}
